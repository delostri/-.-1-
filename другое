class Device:
    def __init__(self, brand, model, year, price):
        self.brand = brand
        self.model = model
        self.year = year
        self.price = price
    
    def display_info(self):
        print(f"\nбренд: {self.brand}")
        print(f"модель: {self.model}")
        print(f"год выпуска: {self.year}")
        print(f"стоимость: {self.price} руб")


class Smartphone(Device):
    def __init__(self, brand, model, year, price, os, ram):
        super().__init__(brand, model, year, price)
        self.os = os
        self.ram = ram
    
    def display_info(self):
        super().display_info()
        print(f"операционная система: {self.os}")
        print(f"оперативная память: {self.ram}")
        print("-" * 30)


class Tablet(Device):
    def __init__(self, brand, model, year, price, screen_size, has_pen):
        super().__init__(brand, model, year, price)
        self.screen_size = screen_size
        self.has_pen = has_pen
    
    def display_info(self):
        super().display_info()
        print(f"размер экрана: {self.screen_size}")
        pen_text = "Да" if self.has_pen else "Нет"
        print(f"поддержка стилуса: {pen_text}")
        print("-" * 30)


def add_device():
    print("\nвыберите тип устройства:")
    print("1. смартфон")
    print("2. планшет")
    
    choice = input("выберите действие (1 или 2): ")
    
    if choice == "1":
        print("\nвведите данные смартфона:")
        device = Smartphone(
            brand=input("бренд: "),
            model=input("модель: "),
            year=int(input("год выпуска: ")),
            price=int(input("стоимость: ")),
            os=input("операционная система: "),
            ram=input("оперативная память: ")
        )
    elif choice == "2":
        print("\nвведите данные планшета:")
        device = Tablet(
            brand=input("бренд: "),
            model=input("Модель: "),
            year=int(input("год выпуска: ")),
            price=int(input("стоимость: ")),
            screen_size=input("размер экрана: "),
            has_pen=input("поддержка стилуса (да/нет): ").lower() == "да"
        )
    else:
        print("неверный выбор!")
        return
    
    print("\n" + "=" * 30)
    print("ваше устройство:")
    device.display_info()



add_device()
